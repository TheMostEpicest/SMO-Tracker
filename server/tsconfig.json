{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "outDir": "./out/",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}